<section class="hero">
  <%= render 'layouts/nav' %>
      <div class="hero-text">
        <h1>You can update your account info here</h1>
      </div>
</section>

<div class="row">
  <div class="large-6 columns">
    <div class="signup-panel">
      <p class="welcome"> Edit Profile </p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row collapse">
            <div class="small-2  columns">
              <span class="prefix"><i class="fi-torso-female"></i></span>
            </div>
            <div class="small-10  columns">
              <%= f.text_field :full_name, autofocus: true, placeholder: 'Full name' %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2  columns">
              <span class="prefix"><i class="fi-torso"></i></span>
            </div>
            <div class="small-10  columns">
              <%= f.text_field :username, autofocus: true, placeholder: 'Username' %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns">
              <span class="prefix"><i class="fi-mail"></i></span>
            </div>
            <div class="small-10  columns">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
            </div>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
          <% end %>
          <div class="row collapse">
            <div class="small-2 columns ">
              <span class="prefix"><i class="fi-lock"></i></span>
            </div>
            <div class="small-10 columns ">
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns ">
              <span class="prefix"><i class="fi-lock"></i></span>
            </div>
            <div class="small-10 columns ">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation' %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns ">
              <span class="prefix"><i class="fi-lock"></i></span>
            </div>
            <div class="small-10 columns ">
              <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password" %>
            </div>
          </div>
          <div><%= f.submit "Update", class: 'button' %></div>
      <% end %>

      <p>
        Unhappy?
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
      </p>
    </div>
  </div>
</div>
