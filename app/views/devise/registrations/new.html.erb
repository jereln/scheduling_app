<section class="hero">
  <%= render 'layouts/nav' %>
    <div class="hero-text">
      <h1>Create your account here!</h1>
    </div>
</section>

<div class="row">
    <div class="large-6 columns">
      <div class="signup-panel">
        <p class="welcome"> Sign Up!</p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
          <div class="row collapse">
            <div class="small-2  columns">
              <span class="prefix"><i class="fi-torso-female"></i></span>
            </div>
            <div class="small-10  columns">
              <%= f.text_field :full_name, autofocus: true, placeholder: 'Full name' %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2  columns">
              <span class="prefix"><i class="fi-torso"></i></span>
            </div>
            <div class="small-10  columns">
              <%= f.text_field :username, autofocus: true, placeholder: 'Username' %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns">
              <span class="prefix"><i class="fi-mail"></i></span>
            </div>
            <div class="small-10  columns">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns ">
              <span class="prefix"><i class="fi-lock"></i></span>
            </div>
            <div class="small-10 columns ">
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns ">
              <span class="prefix"><i class="fi-lock"></i></span>
            </div>
            <div class="small-10 columns ">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation' %>
            </div>
          </div>
            <% if devise_mapping.rememberable? %>
              <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
            <% end %>
          <%= f.submit 'Sign Up!', class: 'button' %>
          <% end %>
         <p>Already have an account? <%= link_to 'Sign in here', sign_in_path %> &raquo</p>
      </div>
    </div>
   </div>



