<section class="hero">
  <%= render 'layouts/nav' %>
    <div class="hero-text">
      <h1>This is your account page</h1><br>
      <h3>Here you can view your current appointments and update your account info</h3>
    </div>
</section>
<p id="notice"><%= notice %></p>

<p><strong>Username:</strong>
  <%= @user.username %></p>
<p><strong>Name:</strong>
  <%= @user.full_name %>
<p><strong>Email:</strong>
  <%= @user.email %></p>
<%= link_to 'Edit my account info', edit_user_registration_path %>
<h2>Your Reserved Appointments</h2>
<% @appointments.each do |appt| %>
  <p><strong>Date:</strong>
    <%= appt.date %></p>
  <p><strong>Time:</strong>
    <%= appt.start_time.strftime("%l:%M") %> - <%= appt.end_time.strftime("%l:%M%p") %></p>
  <p><strong>Therapist:</strong>
    <%= appt.therapist.full_name %></p>
    <%= button_to 'Cancel Appointment', appointment_path(appt, appointment: {reserved: false, client_id: current_user.id}), method: :put, data: {confirm: 'Are you sure?'}%>
<% end %>

