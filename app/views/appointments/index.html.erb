<h1>Listing appointments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= link_to appointment.date, appointment %></td>
        <td><%= appointment.start_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if policy_scope(@appointments) %>
  <%= link_to 'New Appointment', new_appointment_path %>
<% end %>
